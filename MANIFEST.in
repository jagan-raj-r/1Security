# Include documentation
include README.md
include LICENSE
include QUICKSTART.md
include requirements.txt

# Include executable
include 1security

# Include examples
recursive-include examples *.yaml *.yml *.tf *.json

# Exclude unwanted files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.swp
global-exclude *.swo

# Exclude test and development files
prune tests
prune docs
exclude .gitignore
exclude .cursorignore
exclude CODE_REVIEW.md
exclude MVP_COMPLETE.md
exclude CUSTOMIZE_REPORTS.md
exclude 1Security.md
exclude config.yaml

